<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.TransactionDao">

    <select id="get" resultType="com.bootdo.system.domain.TransactionDO">
		select `id`,`trancode`,`method_id`,`time`,`price`,`flag` from tb_transaction where id = #{value}
	</select>

    <select id="list" resultType="com.bootdo.system.domain.TransactionDO">
        select `id`,`trancode`,`method_id`,`time`,`price`,`flag` from tb_transaction
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="trancode != null and trancode != ''">and trancode = #{trancode}</if>
            <if test="methodId != null and methodId != ''">and method_id = #{methodId}</if>
            <if test="time != null and time != ''">and time = #{time}</if>
            <if test="price != null and price != ''">and price = #{price}</if>
            <if test="flag != null and flag != ''">and flag = #{flag}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from tb_transaction
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="trancode != null and trancode != ''">and trancode = #{trancode}</if>
            <if test="methodId != null and methodId != ''">and method_id = #{methodId}</if>
            <if test="time != null and time != ''">and time = #{time}</if>
            <if test="price != null and price != ''">and price = #{price}</if>
            <if test="flag != null and flag != ''">and flag = #{flag}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.bootdo.system.domain.TransactionDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_transaction
		(
			`trancode`, 
			`method_id`, 
			`time`, 
			`price`, 
			`flag`
		)
		values
		(
			#{trancode}, 
			#{methodId}, 
			#{time}, 
			#{price}, 
			#{flag}
		)
	</insert>

    <update id="update" parameterType="com.bootdo.system.domain.TransactionDO">
        update tb_transaction
        <set>
            <if test="trancode != null">`trancode` = #{trancode},</if>
            <if test="methodId != null">`method_id` = #{methodId},</if>
            <if test="time != null">`time` = #{time},</if>
            <if test="price != null">`price` = #{price},</if>
            <if test="flag != null">`flag` = #{flag}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="remove">
		delete from tb_transaction where id = #{value}
	</delete>

    <delete id="batchRemove">
        delete from tb_transaction where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>