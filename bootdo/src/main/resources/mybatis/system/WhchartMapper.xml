<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.system.dao.WhchartDao">

    <select id="get" resultType="com.bootdo.system.domain.WhchartDO">
		select `id`,`whcode`,`code`,`file_name`,`name`,`abbr` from tb_whchart where id = #{value}
	</select>

    <select id="list" resultType="com.bootdo.system.domain.WhchartDO">
        select `id`,`whcode`,`code`,`file_name`,`name`,`abbr` from tb_whchart
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="whcode != null and whcode != ''">and whcode = #{whcode}</if>
            <if test="code != null and code != ''">and code = #{code}</if>
            <if test="fileName != null and fileName != ''">and file_name = #{fileName}</if>
            <if test="name != null and name != ''">and name = #{name}</if>
            <if test="abbr != null and abbr != ''">and abbr = #{abbr}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from tb_whchart
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="whcode != null and whcode != ''">and whcode = #{whcode}</if>
            <if test="code != null and code != ''">and code = #{code}</if>
            <if test="fileName != null and fileName != ''">and file_name = #{fileName}</if>
            <if test="name != null and name != ''">and name = #{name}</if>
            <if test="abbr != null and abbr != ''">and abbr = #{abbr}</if>
        </where>
    </select>

    <insert id="save" parameterType="com.bootdo.system.domain.WhchartDO" useGeneratedKeys="true" keyProperty="id">
		insert into tb_whchart
		(
			`whcode`, 
			`code`, 
			`file_name`, 
			`name`, 
			`abbr`
		)
		values
		(
			#{whcode}, 
			#{code}, 
			#{fileName}, 
			#{name}, 
			#{abbr}
		)
	</insert>

    <update id="update" parameterType="com.bootdo.system.domain.WhchartDO">
        update tb_whchart
        <set>
            <if test="whcode != null">`whcode` = #{whcode},</if>
            <if test="code != null">`code` = #{code},</if>
            <if test="fileName != null">`file_name` = #{fileName},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="abbr != null">`abbr` = #{abbr}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="remove">
		delete from tb_whchart where id = #{value}
	</delete>

    <delete id="batchRemove">
        delete from tb_whchart where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>